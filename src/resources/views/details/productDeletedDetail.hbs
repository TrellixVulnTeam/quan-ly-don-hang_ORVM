<div class="container">
    <h1>{{product.productName}}</h1>
    <div class="row">
        <div class="col-sm-4 col-md-4">
            <p class="text-justify">Mã sản phẩm: {{product.productId}}</p>
        </div>
        <div class="col-sm-8 col-md-8">
            <div class="float-md-right">
                <div class="row">
                    <div class="col-md-auto">
                        <p class="text-justify">Ngày nhập: {{product.productDateIn}}</p>
                    </div>
                    <div class="col-md-auto">
                        <p class="text-justify">Số lượng: {{product.productAmountI}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-lg-4">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="{{product.img}}" alt="{{product.productName}}">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{product.img}}" alt="{{product.productName}}">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{product.img}}" alt="{{product.productName}}">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-lg-8 mt-3">
            <h3 class="text-info">{{product.productPrice}} VNĐ</h3>
            <p class="text-justify">Số lượng còn: {{product.productAmount}}</p>
            <p class="text-justify">Mô tả:
                {{product.description}}
            </p>
        </div>
    </div>
</div>